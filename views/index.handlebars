<h1>Dog Petter</h1>

<h2>Dogs that have not been pet</h2>

<ul>
  {{#each dogs}}
  {{#unless petted}}
  <li>
  		<p><span class="label">ID:</span> {{this.id}}</p>
        <p><span class="label">Name:</span> {{this.dog_name}}</p>

         <button data-id="{{this.id}}" class="pet">Pet this dog</button>
  	</li>
      {{/unless}}
  {{/each}}
</ul>

<h2>Dogs that have been pet</h2>

<ul>
  {{#each dogs}}
  {{#if petted}}
  <li>
  		<p><span class="label">ID:</span> {{this.id}}</p>
        <p><span class="label">Name:</span> {{this.dog_name}}</p>

         <button data-id="{{this.id}}" class="delete">Delete</button>
  	</li>
      {{/if}}
  {{/each}}
</ul>

<h2>Add a Dog</h2>
<form class="create-form">

  <div class="form-group">
    <label for="d">Dog Name:</label>
    <input type="text" id="d" name="name">
  </div>

  <button type="submit">Add Dog</button>
</form>
<script>
  $(".create-form").on("submit", function(event) {
    // Make sure to preventDefault on a submit event.
    event.preventDefault();

    var newDog = {
      name: $("#d").val().trim()
    };
    console.log(newDog);
    $.ajax("/api/dogs", {
      type: "POST",
      data: newDog
    }).then(
      function() {
        console.log("created new dog");
        // Reload the page to get the updated list
        location.reload();
      }
    );
    // Send the POST request.
  });

  $(".pet").on("click", function(event){
    event.preventDefault();
    var id = $(this).data("id");
    var petted = $(this).data("petted");
    console.log(petted);
    var newPetted = {
        petted: petted
    };
      $.ajax("/api/dogs/" + id, {
      type: "PUT",
      data: newPetted
    }).then(
      function() {
        console.log("changed sleep to", newPetted);
        // Reload the page to get the updated list
        location.reload();
      }
    );
  })

  $(".delete").on("click", function(event){
    event.preventDefault();
    var id = $(this).data("id");

      $.ajax("/api/dogs/" + id, {
      type: "DELETE"
    }).then(
      function() {
        console.log("deleted dog with id ", id);
        // Reload the page to get the updated list
        location.reload();
      }
    );
  })
</script>